{
  "name": "pat",
  "version": "0.11.0",
  "private": true,
  "description": "Pat is a cross platform Winlink client with basic messaging capabilities.",
  "author": "martinhpedersen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/la5nta/pat.git"
  },
  "bugs": {
    "url": "https://github.com/la5nta/pat/issues"
  },
  "homepage": "https://getpat.io/",
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o assets/css/",
    "css-prefix": "postcss --replace assets/css/starter.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css assets/css/starter.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "server": "serve --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "keywords": [
    "pat",
    "winlink",
    "windows",
    "mac",
    "linux",
    "ax25",
    "pactor",
    "ardop"
  ],
  "dependencies": {
    "bootstrap": "4.6.0",
    "bootstrap-icons": "1.4.0",
    "bootstrap-select": "^1.13.18",
    "bootstrap-tokenfield": "^0.12.0",
    "jquery": "3.6.0",
    "popper.js": "1.16.1"
  },
  "devDependencies": {
    "autoprefixer": "10.2.5",
    "node-sass": "5.0.0",
    "nodemon": "2.0.7",
    "npm-run-all": "4.1.5",
    "postcss": "8.2.10",
    "postcss-cli": "8.3.1",
    "purgecss": "4.0.2",
    "serve": "11.3.2"
  }
}
